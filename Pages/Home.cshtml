@page
@model RazorCoursework.Pages.HomeModel
@{
}

<h2>Мои обзоры</h2>
<a class="btn btn-light btn-outline-dark text-dark" asp-area="" asp-page="/CreateUserReview">
    Добавить новый обзор
</a>
<div class="row justify-content-center">
    @foreach (var r in Model.myReviews)
    {
    <div class="col-xl-5 col-lg-5 col-md-5 col-10 border border-dark text-center" style="margin: 10px">
        <h4 style="margin-top: 30px; margin-bottom: 30px">@r.ReviewSubjectName</h4>
        <h5 class="text-muted">@r.ReviewSubjectGenre</h5>
        <small class="text-muted">@r.CreationDate</small>
        <hr />
        <p>@r.ReviewText</p>
        <hr />
        <p>Теги:</p>
        <div style="margin-bottom: 30px" class="d-block">
            @foreach (var t in r.TagRelations)
                {
            <a class="btn btn-light btn-outline-dark"
               asp-page="SearchReviews"
               asp-route-tag="@t.Tag.TagName"
               asp-route-p="1">
                <span class="d-inline-block">@t.Tag.TagName</span>
            </a>
                }
        </div>
    </div>
    }
</div>