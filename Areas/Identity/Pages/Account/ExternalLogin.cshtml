@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model ExternalLoginModel
@{

}

<h1>@Localizer["ExternalLoginHeader"]</h1>
<h4 id="external-login-title">@Localizer["AssociateYourAccount"] @Model.ProviderDisplayName.</h4>
<hr />

<p id="external-login-description" class="text-info">
    @Localizer["AuthSuccessText"] <strong>@Model.ProviderDisplayName</strong>.
    @Localizer["PleaseInputEmailText"]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["RegisterButton"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
